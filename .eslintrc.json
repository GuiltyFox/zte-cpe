{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "MemberExpression": 0
            }
        ],
        "linebreak-style":[
            "error",
            "windows"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "no-console": "error",
        "no-inner-declarations":"off",
        "no-irregular-whitespace":"off",
        "no-tabs":"error",
        "no-trailing-spaces":"error",
        "no-unreachable":"off",
        "no-unused-vars": "off",
        "no-var": "error",
        "prefer-const": "warn"
    }
}
